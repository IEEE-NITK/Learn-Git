		<!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->
	</head>
	<body>

		<!-- Header -->
			<section id="header" class="dark">
				<header>
					<h1>Welcome to OPT</h1>
					<p>A website that teaches software engineering</p>
					<p>With love from <a href="http://nitkrug.herokuapp.com" target="_blank">NITK RUG</a></p>
				</header>
				<footer>
					<a href="#first" class="button scrolly">Know More</a>
					<a href="#second" class="button scrolly">Log In</a>
				</footer>
			</section>
			
		<!-- First -->
			<section id="first" class="main">
				<header>
					<div class="container">
						<h2>NITK OPT </h2>
						<p>Our aim through this project is to enhance the software development process by making it as interactive and collaborative as possible</p>
						<p>We have introduced a few courses which you can learn right now in this browser</p>
						<p>Scroll down to know more about the list of courses available</p>
						<div class="row">
							<div class="12u">
								<footer>
									<a href="#tenth" class="button scrolly">List of Courses</a>
								</footer>
							</div>
						</div>
					</div>
				</header>
				<div class="content dark style1 featured">
					<div class="container">
						<div class="row">
							<div class="4u">
								<section id="tenth">
									<span class="feature-icon"><span class="fa fa-github-alt"></span></span>
									<header>
										<h3>GIT</h3>
									</header>
									<p>We try to teach you the basics of Git version control by letting you create a simple game and making everything happen in this browser itself</p>
								</section>
							</div>
							<div class="4u">
								<section>
									<span class="feature-icon"><span class="fa fa-css3"></span></span>
									<header>
										<h3>CSS</h3>
									</header>
									<p>We try to teach you the basics of CSS by letting you letting you apply styles to a simple webpage and making everything happen in this browser itself</p>
								</section>
							</div>
							<div class="4u">
								<section>
									<span class="feature-icon"><span class="fa fa-html5"></span></span>
									<header>
										<h3>HTML5</h3>
									</header>
									<p>We try to teach you the basics of HTML5 by letting you letting you get back to the roots and building the structure of web pages</p>
								</section>
							</div>
						</div>
						<!-- <div class="row">
							<div class="12u">
								<footer>
									<a href="#second" class="button scrolly">Gravida tempor lacinia</a>
								</footer>
							</div>
						</div> -->
					</div>
				</div>
			</section>

		<!-- Second -->
			<section id="second" class="main">
				<header>
					<div class="container">
						<h2>Log In / Sign Up</h2>
						
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				 <h3><%= f.label :email %></h3><br />
				  <%= f.email_field :email, :autofocus => false %>

				  <h3><%= f.label :password %></h3><br />
				  <%= f.password_field :password %>

				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				  <% end -%>

				  <div><%= f.submit "Sign in" %></div>
				<% end %>

<!-- 
				<h3>Email :</h3><input type="text">
				<h3>Password :</h3><input type="text">
				<br/><br/><button class="pure-button" href="#">Sign In</button>
				<h3>Not Registered ?</h3><br/>
				<button class="pure-button" href="#">Sign Up</button>
				<br/>
				<h3>Sign In via </h3> -->
				<%= link_to image_tag("plus.jpeg",width:"35px",height:"35px") ,  user_omniauth_authorize_path(:google_oauth2) %>
				<%= link_to image_tag("git.jpeg",width:"45px",height:"45px") ,  user_omniauth_authorize_path(:github) %>
					</div>
				</header>
				
			</section>
			
		<!-- Third -->
			<section id="third" class="main">

				<div class="content dark style3">

					<div class="container">
						<div class="row">
							<h2 style="font-size:2.25em;margin-left:37%;">Who We Are </h2>
						</div>
						<!-- <div class="row">
							<div class="12u">
								<footer>
									<a href="#second" class="button scrolly">Gravida tempor lacinia</a>
								</footer>
							</div>
						</div> -->
					</div>
				</div>
			</section>

		
		
		<!-- Fourth -->
			<section id="fourth" class="main">
				<header>
					<div class="container">
						<h2>Feedback</h2>
						<p>Do you like what we have done ?</p>
						<p>Do let us know what you think about what we have built</p>
					</div>
				</header>
				<div class="content style4 featured">
					<div class="container small">
						<form method="post" action="#">
							<div class="row half">
								<div class="6u"><input type="text" class="text" placeholder="Name" /></div>
								<div class="6u"><input type="text" class="text" placeholder="Email" /></div>
							</div>
							<div class="row half">
								<div class="12u"><textarea name="message" placeholder="Message"></textarea></div>
							</div>
							<div class="row">
								<div class="12u">
									<ul class="actions">
										<li><input type="submit" class="button" value="Send Message" /></li>
										
									</ul>
								</div>
							</div>
						</form>
					</div>
				</div>
			</section>
			
		<!-- Footer -->
			<section id="footer">
				<ul class="icons">
					<li><a href="#" class="fa fa-twitter solo"><span>Twitter</span></a></li>
					<li><a href="#" class="fa fa-facebook solo"><span>Facebook</span></a></li>
					<li><a href="#" class="fa fa-google-plus solo"><span>Google+</span></a></li>					
					<li><a href="#" class="fa fa-github solo"><span>GitHub</span></a></li>
				</ul>
				<div class="copyright">
					<ul class="menu">
						<li><a href="http://nitkrug.herokuapp.com">NITK RUG</a></li>
						<li>Surathkal, India
						
					</ul>
				</div>
			</section>

	</body>





















