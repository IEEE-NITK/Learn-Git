		<%= javascript_include_tag "/assets/jquery.min.js" %>
		<%= javascript_include_tag "/assets/skel.min.js" %>
		<%= javascript_include_tag "/assets/init.js" %>
			<%= stylesheet_link_tag "/assets/skel-noscript.css" %>
			<%= stylesheet_link_tag "/assets/style.css" %>
			<%= stylesheet_link_tag "/assets/style-wide.css" %>
